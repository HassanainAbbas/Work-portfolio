@model Organify.Models.User

@{
    ViewData["Title"] = "Admin Profile";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-body">
            <h1 class="text-center mb-4 text-primary">Admin Profile</h1>
            <div class="row align-items-center">
                <!-- Admin Icon Section -->
                <div class="col-md-4 text-center mb-4 mb-md-0">
                    <i class="fas fa-user-shield text-primary" style="font-size: 150px;"></i>
                </div>

                <!-- Admin Details Section -->
                <div class="col-md-8">
                    <div class="mb-4">
                        <h3 class="text-secondary">Admin Information</h3>
                        <form method="post" asp-action="UpdateProfile">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <strong>Username:</strong> <span>@Model.Username</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <strong>Email:</strong>
                                    <input type="email" name="email" value="@Model.Email" class="form-control">
                                </li>
                            </ul>
                            <button type="submit" class="btn btn-primary mt-3 shadow-sm">Update Profile</button>
                        </form>
                    </div>

                    <!-- Change Password Form -->
                    <form method="post" asp-action="ChangePassword">
                        <h4 class="text-secondary mt-4">Change Password</h4>
                        <div class="mb-3">
                            <input type="password" name="currentPassword" placeholder="Current Password" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <input type="password" name="newPassword" placeholder="New Password" class="form-control" required />
                        </div>
                        <button type="submit" class="btn btn-secondary shadow-sm">Change Password</button>
                    </form>

                    <!-- Logout Button -->
                    <form method="post" asp-action="Logout">
                        <button type="submit" class="btn btn-danger mt-3 shadow-sm">Log Out</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Font Awesome for Icon Styling -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">



<style>
    /* Profile Picture Styling */
    .profile-picture img {
        max-width: 150px;
        max-height: 150px;
        object-fit: cover;
        border-radius: 50%;
    }

    /* Card Styling */
    .card {
        background: #ffffff;
        border-radius: 12px;
    }

    .list-group-item {
        font-size: 1.1rem;
        padding: 10px 15px;
    }

    .btn {
        min-width: 140px;
        font-size: 1rem;
    }

    .btn-outline-primary {
        color: #007BFF;
        border: 1px solid #007BFF;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

        .btn-outline-primary:hover {
            color: #fff;
            background-color: #007BFF;
        }
</style>
