<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Organify Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
</head>
<body>
    <!-- Admin Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
        <div class="container-fluid">
            <!-- Brand/Logo -->
            <div class="d-flex align-items-center">
                <a href="/Admin/Index" class="navbar-brand">
                    <img src="~/images/logo1.png" alt="Organify Admin Logo" style="height: 40px;" />
                </a>
                <a href="/Admin/Index" class="navbar-brand me-5">Organify Admin</a>
            </div>

            <!-- Toggle Button for Mobile -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNavbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar Links -->
            <div class="collapse navbar-collapse" id="adminNavbarNav">
                <ul class="navbar-nav ms-auto">
                    

                    <!-- Search Bar -->
                    <li class="nav-item">
                        <form class="d-flex search-bar ms-auto">
                            <input type="search" class="form-control" placeholder="Search for services..." />
                            <button class="btn btn-success" type="submit">
                                <i class="bi bi-search"></i>
                            </button>
                        </form>
                    </li>


                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="Admin" asp-action="Index">Dashboard</a>
                    </li>

                
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="Admin" asp-action="Orders">Orders</a>
                    </li>

                    
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="Admin" asp-action="Product">Products</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="Admin" asp-action="ContactMessages">Users</a>
                    </li>

                    <!-- Account Dropdown -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-person-circle"></i> Admin
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" asp-area="" asp-controller="Admin" asp-action="Profile">Profile</a></li>
                            <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <!-- Content -->
    <div class="container-fluid mt-5 pt-5">
        <main role="main">
            <!--this is the hero secction forr all the Admin pages !-->
            <div class="Ahero-section text-white text-center py-5" style="background: linear-gradient(135deg, #2e7d32, #66bb6a, #a5d6a7, #ffe082);">
    <div class="container">
        <h1 class="display-4 fw-bold" style="font-family: 'Poppins', sans-serif; font-size: 3rem; text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);">
            Admin Pannel
        </h1>
        <p class="lead" style="font-family: 'Roboto', sans-serif; font-size: 1.25rem; font-weight: 300; text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.2);">
            Monitor and manage your platform effectively with an organic and vibrant touch.
        </p>
    </div>
</div>
            @RenderBody()

        </main>
    </div>

    <!-- Footer -->
    <footer class="footer mt-auto py-3">
        <div class="container text-center">
            <p class="mb-2">&copy; @DateTime.Now.Year <span class="fw-bold">Organify Admin</span>. Manage with Ease.</p>
            <div class="social-links">
                <a href="#" class="text-dark mx-2"><i class="bi bi-facebook"></i></a>
                <a href="#" class="text-dark mx-2"><i class="bi bi-twitter"></i></a>
                <a href="#" class="text-dark mx-2"><i class="bi bi-instagram"></i></a>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
