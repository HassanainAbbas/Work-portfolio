@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Organify</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <style>
        /* Gradient Navbar */
        .navbar-custom {
            background: linear-gradient(to right, #ffffff, #d4edda, #a8df91, #85c77e, #5da67c);
            color: #ffffff;
        }

            .navbar-custom .navbar-brand {
                color: #1b5e20; /* Dark green for brand */
                font-weight: bold;
            }

                .navbar-custom .navbar-brand:hover {
                    color: #43a047; /* Vibrant green hover */
                }

            /* Black Navbar Buttons */
            .navbar-custom .nav-link {
                color: #000000; /* Black for buttons */
                font-weight: 500;
            }

                .navbar-custom .nav-link:hover {
                    color: #43a047; /* Vibrant green hover effect */
                }

            /* Dropdown Menu */
            .navbar-custom .dropdown-menu {
                background-color: #85c77e; /* Greenish dropdown background */
                border: none;
            }

            .navbar-custom .dropdown-item {
                color: #ffffff;
            }

                .navbar-custom .dropdown-item:hover {
                    background-color: #5da67c; /* Darker green for hover effect */
                }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-custom fixed-top">
        <div class="container-fluid">
            <!-- Brand/Logo Group -->
            <div class="d-flex align-items-center">
                <a href="/" class="navbar-brand">
                    <img src="~/images/logo1.png" alt="Organify Logo" style="height: 40px;" />
                </a>
                <a href="/" class="navbar-brand me-5">Organify</a>
            </div>

            <!-- Toggle Button for Mobile views -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar Links -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <!-- Search Bar -->
                    <li class="nav-item">
                        <form class="d-flex search-bar ms-auto">
                            <input type="search" class="form-control" placeholder="Search for services..." />
                            <button class="btn btn-success" type="submit">
                                <i class="bi bi-search"></i>
                            </button>
                        </form>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Home">Home</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Product" asp-action="Index">Catalog</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Cart" asp-action="Index">Cart</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="About">About</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a>
                    </li>

                    <!-- Account Dropdown -->
                    <li class="nav-item dropdown">
                        @if (HttpContextAccessor?.HttpContext?.Session?.GetString("Username") != null)
                        {
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle"></i> @HttpContextAccessor.HttpContext.Session.GetString("Username")
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Account" asp-action="Profile">Profile</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a>
                                </li>
                            </ul>
                        }
                        else
                        {
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle"></i> Account
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
                                </li>
                            </ul>
                        }
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Notify" id="notificationIcon">
                            <i class="bi bi-bell"></i>
                            <span id="notificationBadge" class="badge bg-danger" style="display: none;">0</span>
                        </a>
                    </li>


                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid mt-5 pt-5">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto py-3">
        <div class="container text-center">
            <p class="mb-2">&copy; @DateTime.Now.Year <span class="fw-bold">Organify</span>. Our Organic Food Center.</p>
            <div class="social-links">
                <a href="#" class="text-dark mx-2"><i class="bi bi-facebook"></i></a>
                <a href="#" class="text-dark mx-2"><i class="bi bi-twitter"></i></a>
                <a href="#" class="text-dark mx-2"><i class="bi bi-instagram"></i></a>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
