@{
    ViewData["Title"] = "Home";

    var featuredProducts = ViewBag.FeaturedProducts as List<Organify.Models.Product>;
}

<!-- Hero Section -->
<div class="container-fluid p-0">
    <div class="hero-section text-center text-white d-flex align-items-center justify-content-center"
         style="background-image: url('/images/hero.jpg'); background-size: cover; background-position: center; height: 80vh; margin-top: -23px; padding-top: 56px;">
        <div class="hero-content">
            <h1 class="display-4 fw-bold">Welcome to Organify</h1>
            <p class="lead">Your one-stop destination for organic and fresh products</p>
            <a href="/Product/Index" class="btn btn-success btn-lg">Shop Now</a>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="container my-5">
    <h2 class="text-center fw-bold mb-4">Why Choose Organify?</h2>
    <div class="row text-center">
        <div class="col-md-4">
            <i class="bi bi-leaf text-success" style="font-size: 50px;"></i>
            <h4 class="mt-3">100% Organic</h4>
            <p>We ensure all our products are grown naturally and sustainably.</p>
        </div>
        <div class="col-md-4">
            <i class="bi bi-box2-heart text-danger" style="font-size: 50px;"></i>
            <h4 class="mt-3">Premium Quality</h4>
            <p>Freshness and quality you can trust, straight from the farm.</p>
        </div>
        <div class="col-md-4">
            <i class="bi bi-truck text-primary" style="font-size: 50px;"></i>
            <h4 class="mt-3">Fast Delivery</h4>
            <p>Quick and reliable delivery right to your doorstep.</p>
        </div>
    </div>
</div>

<!-- Featured Products Section -->
<div class="container my-5">
    <h2 class="text-center fw-bold mb-4">Featured Products</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @if (featuredProducts != null && featuredProducts.Count > 0)
        {
            foreach (var product in featuredProducts)
            {
                <div class="col">
                    <!-- Make the entire card clickable -->
                    <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" class="text-decoration-none" aria-label="View details for @product.Name">
                        <div class="card h-100 shadow product-card">
                            <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                            <div class="card-body text-center">
                                <h5 class="card-title text-dark">@product.Name</h5>
                                <p class="card-text text-muted">@product.Description</p>
                                <p class="fw-bold text-success">$@product.Price.ToString("F2")</p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        }
        else
        {
            <p class="text-center">No featured products available at the moment.</p>
        }
    </div>
</div>

<!-- Call-to-Action Section -->
<div class="cta-section text-center text-white py-5" style="background-color: #009970;">
    <h2 class="fw-bold">Join Our Organic Movement</h2>
    <p>Subscribe to our YouTube channel and stay updated with the latest organic trends and products.</p>
    <a href="https://youtube.com/@@organifiproductschannel6150?si=l2dAtVajrD0ch4bH" class="btn btn-danger btn-lg me-3">Subscribe Now</a>
</div>

<!-- About Us Section -->
<div class="container my-5">
    <div class="row align-items-center">
        <div class="col-md-6">
            <img src="~/images/about.jpg" alt="About Us" class="img-fluid rounded">
        </div>
        <div class="col-md-6">
            <h2 class="fw-bold">About Us</h2>
            <p>At Organify, we are committed to providing you with the best organic products. From fresh fruits and vegetables to natural beverages, we believe in promoting a healthy and sustainable lifestyle.</p>
            <a href="/Home/About" class="btn btn-outline-success">Learn More</a>
        </div>
    </div>
</div>
