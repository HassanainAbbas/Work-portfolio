@{
    ViewData["Title"] = "About";
}

<section class="About-hero-section d-flex align-items-center justify-content-center text-center text-white" style="background-image: url('/images/about-us.jpg');">
    <div>
        <h1 class="display-4 fw-bold">About Organify</h1>
        <p class="lead">Your trusted source for organic living</p>
    </div>
</section>

<div class="container py-5">
    
    <section class="mb-5">
        <h2 class="text-center mb-4">Our Mission & Values</h2>
        <p class="text-center">
            Welcome to Organify, your one-stop destination for organic and fresh products. We're passionate about providing our customers with the highest-quality, sustainably-sourced products that not only nourish their bodies but also promote a healthier planet. Our mission is to make organic living accessible and affordable for everyone, while supporting local farmers and communities. Explore our website to discover our range of organic products, learn about our story, and join our community of like-minded individuals who share our passion for healthy living.
        </p>
        <div class="row text-center mt-4">
            <div class="col-md-4">
                <h5 class="fw-bold">Sustainability</h5>
                <p>We prioritize eco-friendly practices to ensure a greener planet.</p>
            </div>
            <div class="col-md-4">
                <h5 class="fw-bold">Quality</h5>
                <p>Our products are curated to meet the highest organic standards.</p>
            </div>
            <div class="col-md-4">
                <h5 class="fw-bold">Community</h5>
                <p>We believe in building connections that nurture a better world.</p>
            </div>
        </div>
    </section>

    
    <section class="mb-5">
        <h2 class="text-center mb-4">Our Partners</h2>
        <div class="row text-center">
            <div class="col-md-4">
                <img src="~/images/ptr1.png" alt="Partner 1" class="rounded-circle mb-3" style="width: 150px; height: 150px;">
                <h5>Palm</h5>
                <p>Organic Food</p>
            </div>
            <div class="col-md-4">
                <img src="~/images/ptr2.jpg" alt="Partner 2" class="rounded-circle mb-3" style="width: 150px; height: 150px;">
                <h5>Simple Organic Food</h5>
                <p>Organic Food</p>
            </div>
            <div class="col-md-4">
                <img src="~/images/ptr3.png" alt="Partner 3" class="rounded-circle mb-3" style="width: 150px; height: 150px;">
                <h5>Tosha</h5>
                <p>Organic Food</p>
            </div>
        </div>
    </section>

    
    <section class="text-center py-4 bg-light">
        <h2 class="mb-3">Join Our Journey</h2>
        <p class="mb-4">Discover the benefits of organic living with Organify. Explore our products, learn more about our initiatives, or get in touch today!</p>
        <a href="/Home/Contact" class="btn btn-success btn-lg">Contact Us</a>
    </section>
</div>
